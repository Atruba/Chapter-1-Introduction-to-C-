#include <iostream>
#include <string>
using namespace std;

int main()
{
	double length, width, rect, tri, sq;
	cout << "\nThe area of Triangle, Rectangle and Square\n";

	cout << "Enter the length: \n";
	cin >> length;

	cout << "Enter the width: \n";
	cin >> width;

	rect = length * width;
	tri = (length * width) * 0.5;
	sq = length * length;

	cout << "\n The area of the Triangle: \n" << tri;
	cout << "\n The area of the Rectangle: \n" << rect;
	cout << "\n The area of the Square: \n" << sq;

	return 0;
}
